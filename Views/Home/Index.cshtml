@model LogRegWrapper

<div class="row">
    <h1>Welcome To the Dojo Activity Center</h1>
    <div class="col-md-6">
        <form asp-action="CreateUser" method="post">
            <h1>Register</h1>
            <div class="form-group">
                <span class="text-danger" asp-validation-for="User.FirstName"></span>
                <label for="">First Name</label>
                <input type="text" asp-for="User.FirstName" class="form-control">
            </div>
            <div class="form-group">
                <span class="text-danger" asp-validation-for="User.LastName"></span>
                <label for="">Last Name</label>
                <input type="text" asp-for="User.LastName" class="form-control">
            </div>
            <div class="form-group">
                <span class="text-danger" asp-validation-for="User.Email"></span>
                <label for="">Email</label>
                <input asp-for="User.Email" class="form-control">
            </div>
            <div class="form-group">
                <span class="text-danger" asp-validation-for="User.Password"></span>
                <label for="">Password</label>
                <input asp-for="User.Password" class="form-control">
            </div>
            <div class="form-group">
                <span class="text-danger" asp-validation-for="User.ConfirmPassword"></span>
                <label for="">Confirm Password</label>
                <input asp-for="User.ConfirmPassword" class="form-control">
            </div>
            <button class="btn btn-success">Sign Up Now</button>
        </form>
    </div>
    <div class="col-md-6">
        <form asp-action="LoginValidate" method="post">
            <h1>Login</h1>
            @if(TempData["error"] != null)
            {
                <p class="text-danger">@TempData["error"]</p>
            }
            <div class="form-group">
                <span class="text-danger" asp-validation-for="Login.Email"></span>
                <label for="">Email</label>
                <input asp-for="Login.Email" class="form-control">
            </div>
            <div class="form-group">
                <span class="text-danger" asp-validation-for="Login.Password"></span>
                <label for="">Password</label>
                <input asp-for="Login.Password" class="form-control">
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>